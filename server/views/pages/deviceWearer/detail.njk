{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/tabs/macro.njk" import govukTabs %}

{% extends "../../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% set deviceWearerDetailsHtml %}
    <h2 class="govuk-heading-l">Device wearer details</h2>
    {{ govukSummaryList({
    rows: [
        {
        key: {
            text: "Device Wearer ID"
        },
        value: {
            text: deviceWearer.deviceWearerId
        }
        },
        {
        key: {
            text: "First Name"
        },
        value: {
            text: deviceWearer.firstName
        }
        },
        {
        key: {
            text: "Last Name"
        },
        value: {
            text: deviceWearer.lastName
        }
        },
        {
        key: {
            text: "Type"
        },
        value: {
            text: deviceWearer.type
        }
        }
    ]
    }) }}
{% endset -%}

{% set historicCasesHtml %}
    <h2 class="govuk-heading-l">Historic cases</h2>
    Comming soon...???
{% endset -%}

{% block beforeContent %}
  {{ govukBackLink({ href: "/device-wearers", text: "Back" }) }}
{% endblock %}

{% block content %}


{{ govukTabs({
  items: [
    {
      label: "Device wearer details",
      id: "device-wearer-details",
      panel: {
        html: deviceWearerDetailsHtml
      }
    },
    {
      label: "Historic cases",
      id: "historic-cases",
      panel: {
        html: historicCasesHtml
      }
    }
  ]
}) }}


{% endblock %}